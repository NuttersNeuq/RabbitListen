<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diyijiemian_background" >

    <RelativeLayout
        android:id="@+id/diyijiemian_shangtiao_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#30000000"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/diyijiemian_headset_imageview"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/lfl_cehua_selector"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/headset" />

        <ImageView
            android:id="@+id/diyijiemian_menu_imageview"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/lfl_cehua_selector"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="1dp"
            android:src="@drawable/diyijiemian_cehua_button" />
    </RelativeLayout>

    <!-- 大小别改了~只可动Max和setText -->

    <com.lfl.utils.RoundProgressBar
        android:id="@+id/diyijiemian_progressBar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/diyijiemian_shangtiao_relativelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />
    <!-- max -->

    <TextView
        android:id="@+id/diyijiemian_saying_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diyijiemian_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:paddingLeft="10dp"
        android:gravity="center_horizontal"
        android:paddingRight="10dp"
        android:text="BE THE CHANGE YOU WANT TO SEE IN THE WORLD  --- GANDI"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/diyijiemian_fanting_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/diyijiemian_saying_textview"
        android:layout_marginTop="22dp"
        android:background="@drawable/lfl_cehua_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/diyi_fangtingbutton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fantingda"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="泛 听"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diyijiemian_jingting_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/diyijiemian_fanting_linearLayout"
        android:layout_marginTop="5dp"
        android:background="@drawable/lfl_cehua_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.99"
            android:background="@drawable/fantingda"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="精 听"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/diyi_jingtingbutton" />
    </LinearLayout>

</RelativeLayout>